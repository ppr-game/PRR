dotnet_naming_rule.типы_should_be_всечастиспрописнойбуквы.style = всечастиспрописнойбуквы

dotnet_naming_rule.метод_should_be_всечастиспрописнойбуквы.severity = warning
dotnet_naming_rule.метод_should_be_всечастиспрописнойбуквы.symbols = метод
dotnet_naming_rule.метод_should_be_всечастиспрописнойбуквы.style = всечастиспрописнойбуквы

dotnet_naming_rule.property_should_be_начинаетсясмаленькойбуквы.severity = warning
dotnet_naming_rule.property_should_be_начинаетсясмаленькойбуквы.symbols = property
dotnet_naming_rule.property_should_be_начинаетсясмаленькойбуквы.style = начинаетсясмаленькойбуквы

